<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                        app:cardCornerRadius="4dp"
                                        app:cardUseCompatPadding="true"
                                        android:id="@+id/reply_message_item_card"
                                        android:layout_height="wrap_content"
                                        android:minHeight="32dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:cardBackgroundColor="@color/colorPrimary"
                                        app:layout_constraintStart_toStartOf="parent"
                                        android:layout_marginLeft="8dp"
                                        android:layout_marginStart="8dp">
        <TextView
                android:layout_gravity="center"
                android:text="Check"
                android:maxWidth="270dp"
                android:textColor="@color/cardview_light_background"
                android:layout_width="match_parent"
                android:padding="4dp"
                android:layout_height="match_parent" android:id="@+id/reply_message_item_text"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                        app:cardCornerRadius="4dp"
                                        app:cardUseCompatPadding="true"
                                        android:id="@+id/user_message_item_card"
                                        android:layout_height="wrap_content"
                                        android:minHeight="32dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:cardBackgroundColor="@color/colorAccent"
                                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                                        android:layout_marginRight="8dp">
        <TextView
                android:layout_gravity="center"
                android:text="Check"
                android:maxWidth="270dp"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:padding="4dp"
                android:layout_height="match_parent" android:id="@+id/user_message_item_text"/>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>