<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView android:layout_width="wrap_content"
                                       android:maxWidth="270dp"
                                        app:cardCornerRadius="4dp"
                                        app:cardUseCompatPadding="true"
                                        android:id="@+id/reply_message_item_card"
                                        android:layout_height="0dp"
                                        android:minHeight="32dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:cardBackgroundColor="@color/colorPrimary"
                                        app:layout_constraintStart_toStartOf="parent"
                                        android:layout_marginLeft="8dp"
                                        android:layout_marginStart="8dp">
        <LinearLayout
                android:layout_gravity="center"
                android:maxWidth="270dp"
                android:orientation="vertical"
                android:padding="4dp"
                android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="Check"
                    android:maxWidth="270dp"
                    android:textColor="@color/cardview_light_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/reply_message_item_text"/>

            <ImageView
                    android:visibility="gone"
                    android:id="@+id/reply_message_image"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp"
              android:visibility="gone"
              android:id="@+id/button_recycler_view"
              app:layout_constraintTop_toBottomOf="@+id/reply_message_item_card"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
              android:layout_marginRight="16dp">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.cardview.widget.CardView android:layout_width="wrap_content"
                                        app:cardCornerRadius="4dp"
                                        app:cardUseCompatPadding="true"
                                        android:id="@+id/user_message_item_card"
                                        android:layout_height="wrap_content"
                                        android:minHeight="32dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:cardBackgroundColor="@color/colorAccent"
                                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                                        android:layout_marginRight="8dp">
        <TextView
                android:layout_gravity="center"
                android:text="Check"
                android:maxWidth="270dp"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:padding="4dp"
                android:layout_height="match_parent" android:id="@+id/user_message_item_text"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>