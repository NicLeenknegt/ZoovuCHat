<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="150dp"
                                             android:layout_height="wrap_content">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/conversation_image_view" app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>

    <TextView
            android:id="@+id/conversation_text_view"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEST"
            app:layout_constraintTop_toBottomOf="@+id/conversation_image_view"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/conversation_image_view"
            app:layout_constraintStart_toStartOf="@+id/conversation_image_view"/>

</androidx.constraintlayout.widget.ConstraintLayout>